<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:orientation="vertical"
    android:background="@drawable/bgban">
    <TextView
        android:id="@+id/txtuser11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách người dùng "
        android:textSize="34dp"
        android:gravity="center"
        android:textColor="#0048ff"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/edtsearch"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:background="#f2f1f1"
            android:layout_marginLeft="180dp"
            android:hint="nhập email "

            />
        <ImageButton
            android:id="@+id/imgsearch"
            android:layout_width="40dp"
            android:layout_height="25dp"

            android:background="@drawable/search89"

            />


    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="#caffffff"
    android:layout_marginTop="20dp">




<ScrollView
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:layout_marginTop="25dp">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerviewf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:background="#FFF"
        >

    </android.support.v7.widget.RecyclerView>
</ScrollView>
</LinearLayout>

</LinearLayout>